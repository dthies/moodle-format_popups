{{!
    @template format_popups/filedownload

    Modal content for form to download a file

    Example context (json):
    {
        "url": "http://moodle.org/README.txt"
    }
}}
<form action="{{ url }}">
    <input type="hidden" name="forcedownload" value="1" />
    <button class="btn btn-primary">
        {{# str }} download {{/ str }}
    </button>
    <button class="btn btn-secondary" data-action="hide">
        {{# str }} cancel {{/ str }}
    </button>
</form>
